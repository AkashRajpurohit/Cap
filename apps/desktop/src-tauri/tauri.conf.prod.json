{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cap",
  "mainBinaryName": "Cap",
  "identifier": "so.cap.desktop",
  "build": {
    "beforeBundleCommand": "node scripts/stripDebugSymbols.js"
  },
  "plugins": {
    "updater": {
      "active": true
    }
  },
  "bundle": {
    "macOS": {
      "entitlements": "Entitlements.plist"
    },
    "windows": {
      "wix": {
        "upgradeCode": "so.cap.desktop"
      }
    }
  }
}
